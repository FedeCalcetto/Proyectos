@using Dominio;
@model List<Invitacion>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Invitaciones Pendientes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Solicitante</th>
            <th>EstadoInvitacion</th>
            <th>Aceptar</th>
            <th>Rechazar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Invitacion I in Model)
        {       
                <tr>
                <td>@I.Solicitante.Nombre</td>
                <td>@I.EstadoInvitacion</td>
                <td>@Html.ActionLink("Aceptar", "CambiarDeEstado", "Invitacion", new { IdInvitacion=I.IdInvitacion, estado="aceptada"},new { @class = "btn btn-primary" } )</td>
                <td>@Html.ActionLink("Rechazar", "CambiarDeEstado", "Invitacion", new { IdInvitacion=I.IdInvitacion, estado="rechazada"},new { @class = "btn btn-primary" } )</td>
                </tr>
        }
    </tbody>
</table>
